<% include partials/_header %>

  <div class="container">
    <div class="row">
      <!--FORM-->
      <div class="col-md-5 offset-md-3">
        <div class="card">
          <div class="card-body">

            <form action="<%= user ? '/update/' + user._id : '/insert' %>" method="post" id="user-from">

              <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name"
                  value="<%= user && user.name ? user.name : '' %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="mobile" placeholder="mobile"
                  value="<%= user && user.mobile ? user.mobile : '' %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="email" placeholder="email"
                  value="<%= user && user.email ? user.email : '' %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="city" placeholder="city"
                  value="<%= user && user.city ? user.city : '' %>">
              </div>

              <button class="btn btn-primary" type="submit">
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>

  <script>
    $("#user-from").validate({
      rules: {
        name: {
          required: true,
          maxlength: 60
        },
        mobile: {
          required: true,
          digits: true,
          minlength: 10,
          maxlength: 10
        },
        email: {
          required: true,
          email: true,
          maxlength: 60
        },
        city: {
          required: true,
          maxlength: 60
        },
      },
    });
  </script>

  <% include partials/_footer%>